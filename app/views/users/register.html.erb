<h1>Register</h1>

<%= form_tag profile_path do  %>

    <%= label_tag :name %>
    <%= text_field_tag :name, params[:name] %>

    <%= label_tag :address %>
    <%= text_field_tag :address, params[:address] %>

    <%= label_tag :city %>
    <%= text_field_tag :city, params[:city] %>

    <%= label_tag :state %>
    <%= text_field_tag :state, params[:state] %>

    <%= label_tag :zip %>
    <%= number_field_tag :zip, params[:zip] %>

    <%= label_tag :email %>
    <%= text_field_tag :email %>

    <%= label_tag :password %>
    <%= password_field_tag :password %>

    <%= label_tag :password, "Confirm Password" %>
    <%= password_field_tag :password_confirmation %>

    <%= submit_tag "Create Account" %>

<% end %>
